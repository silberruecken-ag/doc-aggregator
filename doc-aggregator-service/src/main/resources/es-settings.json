{
  "analysis": {
    "analyzer": {
      "html_analyzer": {
        "type": "custom",
        "char_filter": [
          "html_strip"
        ],
        "tokenizer": "standard",
        "filter": [
          "lowercase",
          "stopEnglish",
          "stopGerman",
          "snowBallEnglish",
          "snowBallGerman"
        ]
      }
    },
    "filter": {
      "snowBallEnglish": {
        "type": "snowball",
        "language": "English"
      },
      "snowBallGerman": {
        "type": "snowball",
        "language": "German"
      },
      "stopEnglish": {
        "type": "stop",
        "stopwords": "_english_"
      },
      "stopGerman": {
        "type": "stop",
        "stopwords": "_german_"
      }
    }
  }
}
